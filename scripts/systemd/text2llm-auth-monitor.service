[Unit]
Description=text2llm Auth Expiry Monitor
After=network.target

[Service]
Type=oneshot
ExecStart=/home/admin/text2llm/scripts/auth-monitor.sh
# Configure notification channels via environment
Environment=WARN_HOURS=2
